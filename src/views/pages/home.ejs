<%- include('../includes/header') %>
    <%- include('../includes/navigation') %>

        <section id="home-page" class="background-image">
            <div class="home-container">

                <div class="info">
                    <h1>Discover Your Perfect Home</h1>
                    <h2>The Best Real Estate Deals</h2>
                </div>

            </div>
        </section>

        <section id="top-houses">
            <h1>Top Houses</h1>
            <div class="houses">

                <% for(let property of properties) { %>
                    <div class="card-home">
                        <h2>
                            <%=property.name%>
                        </h2>
                        <div class="cta-container">
                            <a href="/property-details/<%=property._id%>" class="details-link">
                                Details
                            </a>
                        </div>
                        <div class="card_image"><img src="<%= property.image %>"></div>
                    </div>
                    <% } %>

                        <% if(properties.length===0) {%>
                            <div class="no-data-container">
                                <p class="no-data">There are no housing offers found...</p>
                            </div>
                            <% } %>
            </div>
        </section>

        <%- include('../includes/footer') %>