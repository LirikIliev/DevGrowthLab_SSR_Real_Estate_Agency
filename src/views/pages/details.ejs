<%- include('../includes/header') %>
    <%- include('../includes/navigation') %>

        <section id="deatils-page">
            <div class="wrapper">
                <div class="product-img">
                    <img src="<%=values.image%>">
                </div>
                <div class="product-info">
                    <div class="product-text">
                        <div class="product-text">
                            <h1>
                                Name: <%=values.name %>
                            </h1>
                            <h2>
                                Type: <%=values.type%>
                            </h2>
                            <h4>
                                Year: <%=values.year%>
                            </h4>
                            <h4>
                                City: <%=values.city%>
                            </h4>
                            <p>
                                Description: <%=values.description%>
                            </p>

                            <% if(tenants) {%>
                                <p>
                                    <%= tenants %>
                                </p>
                                <% } else {%>
                                    <p>People rented this housing: There are no tenants yet.</p>
                                    <% } %>
                        </div>
                    </div>

                    <div class="product-btn">
                        <% if(isAuth) {%>
                            <% if(isOwner) { %>
                                <a href='/edit-property-offer/<%=values._id%>' class="edit">Edit</a>
                                <a href="/delete-property-offer/<%=values._id%>" class="remove">Delete</a>
                                <% } else {%>
                                    <% if(hasFreeSpaces && !hasUserBooked) {%>
                                        <a href="/rent-property/<%=values._id%>" class="rentHome">
                                            Rent a home, available <%=freeSpaces %> housing
                                        </a>
                                        <% } %>
                                            <% if(hasUserBooked) { %>
                                                <p class="alRentHome">
                                                    You have already rent this home
                                                </p>
                                                <% } %>
                                                    <% if(!hasFreeSpaces) {%>
                                                        <p class="no-housing">No Housing Available!</p>
                                                        <% } %>
                                                            <% } %>
                                                                <% } %>
                                                                    <a href="/rent-property" class="rentHome">
                                                                        Back
                                                                    </a>
                    </div>
                </div>
            </div>
        </section>

        <%- include('../includes/footer') %>